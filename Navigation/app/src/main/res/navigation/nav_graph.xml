<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.navigation.MainFragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/Cardtodetail"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:label="@string/detailFrgament"
        android:name="com.example.navigation.DetailFragment"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/detailtocard"
            app:destination="@id/mainFragment"
            />
        <argument
            android:name="name"
            app:argType="string" />
        <argument android:name="email" />
        <argument
            android:name="gender"
            app:argType="string" />
        <argument android:name="status" />
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>