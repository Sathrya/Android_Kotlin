<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

       <androidx.cardview.widget.CardView
           android:id="@+id/grid_card"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="@dimen/cardview_radius"
           app:cardElevation="@dimen/cardElevation"
           app:cardUseCompatPadding="true">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:background="@drawable/gradient"
               android:layout_height="match_parent">
           <androidx.constraintlayout.widget.ConstraintLayout
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/flagBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <ImageView
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:id="@+id/grid_flag"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <ImageButton
               android:elevation="@dimen/button_elevation"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:id="@+id/grid_likeBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           </androidx.constraintlayout.widget.ConstraintLayout>
           <androidx.constraintlayout.widget.ConstraintLayout
               app:layout_constraintTop_toBottomOf="@+id/flagBtn"
               android:layout_width="match_parent"
               android:id="@+id/detailsconstraint"
               android:layout_height="wrap_content">
           <LinearLayout
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/grid_details_box"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <TextView
               style="@style/Country_name__TextView"
               android:id="@+id/grid_country_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               style="@style/Country_TextView"
               android:id="@+id/grid_country_capital"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               style="@style/Country_TextView"
               android:id="@+id/grid_country_telprefix"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/grid_country_fips"
               style="@style/Country_TextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               style="@style/Country_TextView"
               android:id="@+id/grid_country_iso2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               style="@style/Country_TextView"
               android:id="@+id/grid_country_iso3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               style="@style/Country_TextView"
               android:id="@+id/grid_country_isonum"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               style="@style/Country_TextView"
               android:id="@+id/grid_country_center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               style="@style/Country_TextView"
               android:id="@+id/grid_country_rect"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           </LinearLayout>
           </androidx.constraintlayout.widget.ConstraintLayout>
           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.cardview.widget.CardView>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>